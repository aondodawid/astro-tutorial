<button class="hamburger-btn">
  <div class="hamburger"></div>
</button>

<style>
  .hamburger-btn {
    width: 40px;
    height: 30px;
    display: block;
    align-content: center;
    /* justify-content: center; */
    /* align-items: center; */
    padding: 0;
  }
      .wrapper {
        background-color: transparent;
        margin: 0 ;
        font-size: 1.2rem;
        background: url('https://storage.googleapis.com/s-img/osqbp3v3dwwhg7qm.png') no-repeat center center;
        -webkit-background-size: contain;
        -moz-background-size: contain;
        -o-background-size: contain;
        background-size: contain;
        aspect-ratio: 68/25;
        padding-top: clamp(1.6875rem, 0rem + 3.9706vw, 3.375rem);
        padding-left: clamp(1.5625rem, 0rem + 3.6765vw, 3.125rem);
        border: none;
        cursor: pointer;
      }
  .hamburger,
  .hamburger::before,
  .hamburger::after {
    padding-right: unset;
    /* margin-left: 0; */
    width: 30px;
    background-color: #ff9776;
    border-radius: 4px;
    height: 3px;
    position: relative;
    cursor: pointer;
    user-select: none;
  }
  .hamburger::before,
  .hamburger::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
  }

  .hamburger::before {
    margin-top: 7px;
  }
  .hamburger::after {
    margin-top: 14px;
  }
</style>
