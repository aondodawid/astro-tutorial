<style>
  .hamburger2 {
    cursor: pointer;
    position: relative;
    top: 55px;
    pointer-events: auto;
    z-index: 999;
    display: flex;
    background-color: #f2f2f2;
    opacity: 0.7;
    border-radius: 25px;
    width: 50px;
    height: 50px;
  }
  .hamburger2::before {
    border-left: 2px solid #000;
    border-right: 2px solid #000;
    transform: rotate(270deg);
    top: 0;
  }
  .hamburger2::before,
  .hamburger-line-center::after {
    content: "";
    width: 13px;
    height: 13px;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
  }
  .hamburger-line-center::after {
    border-bottom: 2px solid #000;
    transform: rotate(180deg);
    top: 15px;
  }
</style>
